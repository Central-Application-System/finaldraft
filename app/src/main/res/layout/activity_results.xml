<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen"
    android:gravity="center"
    tools:context=".results">

    <!-- Logo ImageView -->

    <!-- CardView for Results Input -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/clapps"
            android:orientation="vertical"
            android:padding="24dp">


            <TextView
                android:id="@+id/loginText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter Your best six subjects"
                android:textColor="@color/black"
                android:textSize="25dp"
                android:textStyle="italic" />

            <TableLayout
                android:id="@+id/tableLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true">

                <!-- Header Row -->
                <TableRow>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Subject"
                        android:textStyle="bold"
                        android:padding="8dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Grade"
                        android:textStyle="bold"
                        android:padding="8dp"/>
                </TableRow>

                <!-- Row 1 -->
                <TableRow>
                    <EditText
                        android:id="@+id/subject_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Subject 1"
                        android:padding="8dp"
                        />

                    <EditText
                        android:id="@+id/grade_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Grade"
                        android:inputType="text"
                        android:padding="8dp"/>
                </TableRow>

                <!-- Row 2 -->
                <TableRow>
                    <EditText
                        android:id="@+id/subject_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Subject 2"
                        android:padding="8dp"
                        android:layout_marginTop="14dp"/>

                    <EditText
                        android:id="@+id/grade_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Grade"
                        android:inputType="text"
                        android:padding="8dp"
                        android:layout_marginTop="14dp"/>


                </TableRow>
                <TableRow>
                    <EditText
                        android:id="@+id/subject_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Subject 3"
                        android:padding="8dp"
                        android:layout_marginTop="14dp"/>

                    <EditText
                        android:id="@+id/grade_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Grade"
                        android:inputType="text"
                        android:padding="8dp"
                        android:layout_marginTop="14dp"/>


                </TableRow>
                <TableRow>
                    <EditText
                        android:id="@+id/subject_4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Subject 4"
                        android:padding="8dp"
                        android:layout_marginTop="14dp"/>

                    <EditText
                        android:id="@+id/grade_4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Grade"
                        android:inputType="text"
                        android:padding="8dp"
                        android:layout_marginTop="14dp"/>


                </TableRow>
                <TableRow>
                    <EditText
                        android:id="@+id/subject_5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Subject 5"
                        android:padding="8dp"
                        android:layout_marginTop="14dp"/>

                    <EditText
                        android:id="@+id/grade_5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Grade"
                        android:inputType="text"
                        android:padding="8dp"
                        android:layout_marginTop="14dp"/>


                </TableRow>
                <TableRow>
                    <EditText
                        android:id="@+id/subject_6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Subject 6"
                        android:padding="8dp"
                        android:layout_marginTop="14dp"/>

                    <EditText
                        android:id="@+id/grade_6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Grade"
                        android:inputType="text"
                        android:padding="8dp"
                        android:layout_marginTop="14dp"/>


                </TableRow>
                <TableRow>


                    <EditText
                        android:id="@+id/total"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="total points"
                        android:inputType="text"
                        android:padding="8dp"
                        android:layout_marginTop="14dp"
                        android:textAlignment="center"/>


                </TableRow>


            </TableLayout>

            <Button
                android:id="@+id/buttonUploadResults"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="30dp"
                android:text="Upload Results"
                android:backgroundTint="@color/lightblue"
                android:textSize="18sp"
                app:cornerRadius="20dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>